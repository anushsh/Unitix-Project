<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewEventActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-48dp"
        tools:layout_editor_absoluteY="-34dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rate and ReviewEvent"
            android:textColor="#673AB7"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter your rating (between 0 and 5)"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/rating"
            android:layout_width="540px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:selectAllOnFocus="false"
            android:textAlignment="center"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter your review"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/review"
            android:layout_width="700px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:selectAllOnFocus="false"
            android:textAlignment="center"
            android:textSize="10sp" />

        <Button
            android:id="@+id/review_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onReviewButtonClick"
            android:text="Rate and Review" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

